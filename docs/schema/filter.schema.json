{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Filter",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the filter."
    },
    "type": {
      "type": "string",
      "description": "The type of the filter (e.g., 'agency', 'date')."
    },
    "options": {
      "type": "array",
      "items": {
        "$ref": "#/components/schemas/FilterOption"
      },
      "description": "A list of filter options."
    }
  },
  "required": [
    "name",
    "type",
    "options"
  ]
}