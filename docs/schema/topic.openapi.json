openapi: 3.1.0
info:
  title: Topic Schema
  version: '1.0.0'
components:
  schemas:
    Topic:
      type: object
      description: Represents a topic.
      properties:
        name:
          type: string
          description: The name of the topic.
        slug:
          type: string
          description: The URL-friendly slug for the topic.
        url:
          type: string
          format: uri
          nullable: true
          description: The URL for the topic.
      required:
        - name
        - slug
